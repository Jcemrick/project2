<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('../partials/head.ejs') %>
    <title>Named Space Card Game</title>
</head>
<body>
    <header class="indexheader"> 
        <h1>Named Space Card Game</h1>
        <div class="headerlink">
        <a href="./new.ejs"><button>Card Shop</button></a>
        <a href="./show.ejs"><button>Card Database</button></a>
        <a href=""><button>Account</button></a>
        </div>
    </header>
    <div class="container">
        <% decks.forEach((deck, index) => { %>
        <div class="card">
            <img src="../../public/blueprint.jpeg" alt="cardimage">
            <a href="/index/<%= deck._id %>"><button>
                <div class="cardcontainer">
                    <h4> <%= deck.name %> </h4>
                    <p> Attack: <%= deck.attack %> </p>
                    <p> Defense: <%= deck.defense %> </p>
                </div>
            </button></a>
        </div>
        <% }) %>
    </div>
    <div>
        <p id="description">
        </p>
    </div>
</body>
</html>